// This is your Prisma schema file

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               String         @id @default(uuid())
  email            String         @unique
  passwordHash     String
  role             UserRole       @default(USER)
  stripeCustomerId String?        @unique
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt

  subscriptions    Subscription[]
  chatSessions     ChatSession[]
  usage            Usage[]
  
  // Affiliate relation
  affiliateId      String?
  affiliate        Affiliate?     @relation(fields: [affiliateId], references: [id])
}

model Affiliate {
  id             String   @id @default(uuid())
  name           String   // Internal name (e.g. "Mike")
  code           String   @unique // Stripe Promo Code (e.g. "REF-7X92K")
  referralLink   String   // Full link

  // Stats
  visits         Int      @default(0)
  signups        Int      @default(0)
  conversions    Int      @default(0) // Paid users

  // Money
  payoutRate     Float    @default(5.00)
  amountPaid     Float    @default(0)
  paymentManager String?  // "Yoni" or "Ethan"

  phoneNumber    String?
  venmoHandle    String?

  // College association
  collegeId      String?
  college        College? @relation(fields: [collegeId], references: [id])

  stripePromoId  String?  // ID of the promotion code in Stripe
  stripeCouponId String?  // ID of the underlying coupon in Stripe

  archived       Boolean  @default(false)

  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  referredUsers  User[]
}

model College {
  id         String      @id @default(uuid())
  name       String      @unique // Full college name (e.g., "Harvard University")
  state      String      // State abbreviation (e.g., "MA")
  city       String?     // City name (optional)
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt

  affiliates Affiliate[]

  @@index([name])
  @@index([state])
}

enum UserRole {
  USER
  ADMIN
}

model Subscription {
  id                   String             @id @default(uuid())
  userId               String
  stripeSubscriptionId String?            @unique
  stripePriceId        String?
  status               SubscriptionStatus @default(ACTIVE)
  plan                 Plan               @default(FREE)
  currentPeriodEnd     DateTime?
  createdAt            DateTime           @default(now())
  updatedAt            DateTime           @updatedAt

  user                 User               @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

enum SubscriptionStatus {
  ACTIVE
  TRIALING
  CANCELED
  PAST_DUE
}

enum Plan {
  FREE
  BASIC
  PRO
}

model ChatSession {
  id                  String      @id @default(uuid())
  userId              String
  title               String?
  mode                ChatMode
  createdAt           DateTime    @default(now())
  updatedAt           DateTime    @updatedAt

  // Smart cache for region detection
  cachedRegionData    Json?       // Cached region detection from first capture
  skipRegionDetection Boolean     @default(false) // Skip detection on follow-ups
  sourceUrl           String?     @db.Text
  ipAddress           String?

  user                User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  messages            Message[]
  interactions        Interaction[]

  @@index([userId])
  @@index([createdAt])
}

model Interaction {
  id            String      @id @default(uuid())
  chatSessionId String
  type          String      // 'TAB_SWITCH', etc.
  metadata      Json?       // { provider: 'CLAUDE' }
  createdAt     DateTime    @default(now())

  chatSession   ChatSession @relation(fields: [chatSessionId], references: [id], onDelete: Cascade)

  @@index([chatSessionId])
}

enum ChatMode {
  REGULAR
  FAST
  EXPERT
}

model Message {
  id               String       @id @default(uuid())
  chatSessionId    String
  role             MessageRole
  content          String       @db.Text
  shortAnswer      String?
  provider         LLMProvider?
  metadata         Json?
  createdAt        DateTime     @default(now())

  // Structured answer fields
  questionType     String?      // 'multiple-choice', 'fill-in-blank', etc.
  answerFormat     String?      // 'single-letter', 'number', 'text'
  structuredAnswer Json?        // Type-specific answer object
  confidence       Float?       // 0.0-1.0

  // Region detection
  questionRegions  Json?        // Bounding boxes from vision analysis
  selectedRegionId Int?         // Which question user chose (1, 2, 3...)

  chatSession      ChatSession  @relation(fields: [chatSessionId], references: [id], onDelete: Cascade)
  attachments      Attachment[]

  @@index([chatSessionId])
  @@index([createdAt])
}

enum MessageRole {
  USER
  ASSISTANT
  SYSTEM
}

enum LLMProvider {
  GEMINI
  OPENAI
  CLAUDE
  CONSENSUS
}

model Attachment {
  id               String         @id @default(uuid())
  messageId        String
  type             AttachmentType
  source           CaptureSource
  storageUrl       String?
  imageData        String?        @db.Text
  width            Int?
  height           Int?
  createdAt        DateTime       @default(now())

  // Region detection metadata
  regionData       Json?          // Full region detection response

  message          Message        @relation(fields: [messageId], references: [id], onDelete: Cascade)

  @@index([messageId])
  @@index([createdAt])
}

enum AttachmentType {
  IMAGE
}

enum CaptureSource {
  SCREEN
  SNIP
}

model Usage {
  id                 String   @id @default(uuid())
  userId             String
  date               DateTime @db.Date
  solvesUsed         Int      @default(0)
  modeRegularCount   Int      @default(0)
  modeFastCount      Int      @default(0)
  modeExpertCount    Int      @default(0)
  tokensUsed         Int      @default(0)

  // Detailed token tracking per provider
  geminiFlashInputTokens  Int   @default(0)
  geminiFlashOutputTokens Int   @default(0)
  geminiFlashCost         Float @default(0)
  geminiProInputTokens    Int   @default(0)
  geminiProOutputTokens   Int   @default(0)
  geminiProCost           Float @default(0)
  openaiInputTokens       Int   @default(0)
  openaiOutputTokens      Int   @default(0)
  openaiCost              Float @default(0)
  claudeInputTokens       Int   @default(0)
  claudeOutputTokens      Int   @default(0)
  claudeThinkingTokens    Int   @default(0)
  claudeCost              Float @default(0)
  totalMonthlyCost        Float @default(0)

  user               User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, date])
  @@index([userId])
  @@index([date])
}

model AdminStats {
  id                 String   @id @default(uuid())
  date               DateTime @unique @db.Date

  // Site-wide aggregated token tracking
  geminiFlashInputTokens  BigInt @default(0)
  geminiFlashOutputTokens BigInt @default(0)
  geminiFlashCost         Float  @default(0)
  geminiProInputTokens    BigInt @default(0)
  geminiProOutputTokens   BigInt @default(0)
  geminiProCost           Float  @default(0)
  openaiInputTokens       BigInt @default(0)
  openaiOutputTokens      BigInt @default(0)
  openaiCost              Float  @default(0)
  claudeInputTokens       BigInt @default(0)
  claudeOutputTokens      BigInt @default(0)
  claudeThinkingTokens    BigInt @default(0)
  claudeCost              Float  @default(0)
  totalMonthlyCost        Float  @default(0)

  createdAt          DateTime @default(now())

  @@index([date])
}
